{% extends "site/panel.hbs" %}
{% block title %} Weather {% end %}
{% block panel %}
<dl id="weather_info" class="dl-horizontal">
    <dt>Safe:</dt> <dd> <strong><span class="safe_condition text-success">N/A</span></strong> </dd>
    <dt>Temp:</dt> <dd> <span class="ambient_temp_C">N/A</span>&deg; <small class="unit_temp">C</small></dd>
    <dt>Sky:</dt> <dd> (<span class="sky_condition">N/A</span>) <span class="sky_temp_C">N/A</span>&deg; <small class="unit_temp">C</small></dd>
    <dt>Wind:</dt> <dd> (<span class="wind_condition">N/A</span>) <span class="wind_speed_KPH">N/A</span> <small>km/h</small></dd>
    <dt>Rain:</dt> <dd> <span class="rain_condition">N/A</span> </dd>
    <dt>Computer Box:</dt>
    <dd>
        <small>Temps: </small><br />
        <span class="pull-right"><small>NUC: </small><span class="computer_box_temp_nuc">N/A</span>&deg; <small class="unit_temp">C</small></span><br />
        <span class="pull-right"><small>Battery: </small><span class="computer_box_temp_battery">N/A</span>&deg; <small class="unit_temp">C</small></span><br />
        <span class="pull-right"><small>Board: </small><span class="computer_box_temp_board">N/A</span>&deg; <small class="unit_temp">C</small></span><br />
        <span class="pull-right"><small>Lid: </small><span class="computer_box_temp_lid">N/A</span>&deg; <small class="unit_temp">C</small></span><br />
    </dd>
    <dt>&nbsp;</dt> 
    <dd><small>Humidity: </small>
        <span class="pull-right"><span class="computer_box_humidity_00">N/A</span> %</span>
    </dd>

    <dt>Camera Box:</dt>
    <dd>
        <small>Temp: </small>
        <span class="pull-right"><span class="camera_box_temp_00">N/A</span>&deg; <small class="unit_temp">C</small></span>
    </dd>
    <dt>&nbsp;</dt> 
    <dd>
        <small>Humidity: </small>
        <span class="pull-right"><span class="camera_box_humidity_00">N/A</span> % </span>
    </dd>
</dl>
{% end %}
